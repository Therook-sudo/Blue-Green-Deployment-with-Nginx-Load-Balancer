# Blue/Green Deployment Configuration

# Active pool - determines which service receives traffic
# Options: blue | green
ACTIVE_POOL=blue

# Release identifiers - shown in X-Release-Id header
RELEASE_ID_BLUE=blue-v1.0.0
RELEASE_ID_GREEN=green-v1.0.0

# Slack Integration

# Alert Configuration
ERROR_RATE_THRESHOLD=2.0        # Percentage (e.g., 2.0 = 2%)
WINDOW_SIZE=200                 # Number of requests to track
ALERT_COOLDOWN_SEC=300          # Seconds between duplicate alerts

# Maintenance Mode (suppresses failover alerts)
MAINTENANCE_MODE=false